    </script>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Products</title>
</head>
<style>
    .container {
        width: 100%;
        height: 20%
    }
</style>

<body>
    <div class="container ">
        <div class="row ">
            <% for( let i = 0; i < product.length; i++ ) { %>
                <div class="col-3">
                    <span>id: <%= product[i].id%></span>
                    <h3>
                        <%= product[i].title%>
                    </h3>
                    <div id="image">
                        <img src="/images/<%=product[i].image %>" alt="image here" width="300px" height="300px">

                    </div>
                    <div>
                        <span> description:<%= product[i].description%></span>
                    </div>
                    <div id="price">
                        <span>Price :<%= product[i].price %> </span>

                    </div>
                    <button type="button" class="btn btn-secondary"> BUY NOW</button>
                </div>
                <% } %>


        </div>


        <!-- Optional JavaScript; choose one of the two! -->

        <!-- Option 1: Bootstrap Bundle with Popper -->
